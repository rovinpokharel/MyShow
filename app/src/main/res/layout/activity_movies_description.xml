<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.rovin.pokharel.myshow.MoviesDescription">
    <ImageView
        android:id="@+id/desc_movie_image"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">
        <TextView
            android:id="@+id/desc_movie_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            tools:text="Mission Impossible"
            android:textSize="19sp"
            android:textStyle="bold"/>
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            app:cardCornerRadius="4dp"
            android:id="@+id/cardView">
            <TextView
                android:id="@+id/desc_movie_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="#d50000"
                android:text="Upcoming"/>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/desc_movie_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/desc_movie_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            tools:text="2018-07-01"
            android:textSize="14sp"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/desc_movie_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/desc_movie_date"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            tools:text="This is a hollywood movie"
            android:textSize="14sp"
            android:textStyle="normal"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/cardView"
            android:layout_alignStart="@+id/cardView"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:src="@drawable/ic_ticket"/>
    </RelativeLayout>


</LinearLayout>
